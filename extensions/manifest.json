{
  "manifest_version": 2,

  "name": "Facebook Find PhoneNumber",
  "externally_connectable": {
    "matches": ["*://*.facebook.com/*"]
  },
  "description": "Extension lấy số điện thoại Facebook",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "showBtn" : {
        "suggested_key": {
             "default": "Alt+S" 
        },
        "description": "Enable scan button"
    }
},
  "permissions": ["activeTab"]
}
